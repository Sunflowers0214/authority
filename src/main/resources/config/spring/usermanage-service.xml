<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 全局参数 -->
    <bean id="configService" class="com.flysnow.usermanage.service.impl.ConfigServiceImpl">
        <property name="configDao" ref="configDao"/>
    </bean>

    <!-- 部门 -->
    <bean id="departmentService" class="com.flysnow.usermanage.service.impl.DepartmentServiceImpl">
        <property name="departmentDao" ref="departmentDao"/>
    </bean>

    <!-- 字典 -->
    <bean id="dictService" class="com.flysnow.usermanage.service.impl.DictServiceImpl">
        <property name="dictDao" ref="dictDao"/>
    </bean>

    <!-- 字典选项 -->
    <bean id="dictItemService" class="com.flysnow.usermanage.service.impl.DictItemServiceImpl">
        <property name="dictItemDao" ref="dictItemDao"/>
    </bean>

    <!-- 登录日志 -->
    <bean id="loginLogService" class="com.flysnow.usermanage.service.impl.LoginLogServiceImpl">
        <property name="loginLogDao" ref="loginLogDao"/>
    </bean>

    <!-- 菜单 -->
    <bean id="menuService" class="com.flysnow.usermanage.service.impl.MenuServiceImpl">
        <property name="menuDao" ref="menuDao"/>
    </bean>

    <!-- 菜单权限 -->
    <bean id="menuPermissionService" class="com.flysnow.usermanage.service.impl.MenuPermissionServiceImpl">
        <property name="menuPermissionDao" ref="menuPermissionDao"/>
    </bean>

    <!-- 操作日志 -->
    <bean id="operateLogService" class="com.flysnow.usermanage.service.impl.OperateLogServiceImpl">
        <property name="operateLogDao" ref="operateLogDao"/>
    </bean>

    <!-- 角色 -->
    <bean id="roleService" class="com.flysnow.usermanage.service.impl.RoleServiceImpl">
        <property name="roleDao" ref="roleDao"/>
    </bean>

    <!-- 角色功能 -->
    <bean id="roleFuncService" class="com.flysnow.usermanage.service.impl.RoleFuncServiceImpl">
        <property name="roleFuncDao" ref="roleFuncDao"/>
    </bean>

    <!-- 角色菜单 -->
    <bean id="roleMenuService" class="com.flysnow.usermanage.service.impl.RoleMenuServiceImpl">
        <property name="roleMenuDao" ref="roleMenuDao"/>
    </bean>

    <!-- 用户 -->
    <bean id="userService" class="com.flysnow.usermanage.service.impl.UserServiceImpl">
        <property name="userDao" ref="userDao"/>
    </bean>

    <!-- 用户登录权限 -->
    <bean id="userPermissionService" class="com.flysnow.usermanage.service.impl.UserPermissionServiceImpl">
        <property name="userPermissionDao" ref="userPermissionDao"/>
    </bean>

    <!-- 用户角色 -->
    <bean id="userRoleService" class="com.flysnow.usermanage.service.impl.UserRoleServiceImpl">
        <property name="userRoleDao" ref="userRoleDao"/>
    </bean>

</beans>

