<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.flysnow.usermanage.dao.OperateLogDao">

	<sql id="OperateLogWhere">
		<if test="operateLogId != null">
            AND a.operate_log_id=#{operateLogId}
		</if>
		<if test="userId != null">
            AND a.user_id=#{userId}
		</if>
		<if test="userAccount != null">
            AND a.user_account=#{userAccount}
		</if>
		<if test="userName != null">
            AND a.user_name=#{userName}
		</if>
		<if test="operateSql != null">
            AND a.operate_sql=#{operateSql}
		</if>
		<if test="operateType != null">
            AND a.operate_type=#{operateType}
		</if>
		<if test="operateTime != null">
            AND a.operate_time=#{operateTime}
		</if>
	</sql>
	
	<sql id="OperateLogModifyWhere">
		<if test="where.operateLogId != null">
			operate_log_id=#{where.operateLogId}
		</if>
		<if test="where.userId != null">
			user_id=#{where.userId}
		</if>
		<if test="where.userAccount != null">
			user_account=#{where.userAccount}
		</if>
		<if test="where.userName != null">
			user_name=#{where.userName}
		</if>
		<if test="where.operateSql != null">
			operate_sql=#{where.operateSql}
		</if>
		<if test="where.operateType != null">
			operate_type=#{where.operateType}
		</if>
		<if test="where.operateTime != null">
			operate_time=#{where.operateTime}
		</if>
	</sql>
	
	<insert id="insertOperateLog" parameterType="OperateLog">
		INSERT INTO t_operate_log (
        <trim prefix="" suffixOverrides=",">
			<if test="operateLogId != null">
				,operate_log_id
			</if>
			<if test="userId != null">
				,user_id
			</if>
			<if test="userAccount != null">
				,user_account
			</if>
			<if test="userName != null">
				,user_name
			</if>
			<if test="operateSql != null">
				,operate_sql
			</if>
			<if test="operateType != null">
				,operate_type
			</if>
			<if test="operateTime != null">
				,operate_time
			</if>
		</trim>
		) VALUES (
        <trim prefix="" suffixOverrides=",">
	       	<if test="operateLogId != null">
				,#{operateLogId}
			</if>
	       	<if test="userId != null">
				,#{userId}
			</if>
	       	<if test="userAccount != null">
				,#{userAccount}
			</if>
	       	<if test="userName != null">
				,#{userName}
			</if>
	       	<if test="operateSql != null">
				,#{operateSql}
			</if>
	       	<if test="operateType != null">
				,#{operateType}
			</if>
	       	<if test="operateTime != null">
				,#{operateTime}
			</if>
		</trim>
		)
	</insert>

    <delete id="deleteOperateLog" parameterType="OperateLog">
        DELETE FROM t_operate_log
        WHERE 1=1
        <trim prefix="" prefixOverrides="AND">
            <include refid="OperateLogModifyWhere" />
        </trim>
    </delete>

    <update id="updateOperateLog" parameterType="OperateLog">
		UPDATE t_operate_log
        <trim prefix="SET" suffixOverrides=",">
			<if test="operateLogId != null">
				,operate_log_id=#{operateLogId}
			</if>
			<if test="userId != null">
				,user_id=#{userId}
			</if>
			<if test="userAccount != null">
				,user_account=#{userAccount}
			</if>
			<if test="userName != null">
				,user_name=#{userName}
			</if>
			<if test="operateSql != null">
				,operate_sql=#{operateSql}
			</if>
			<if test="operateType != null">
				,operate_type=#{operateType}
			</if>
			<if test="operateTime != null">
				,operate_time=#{operateTime}
			</if>
		</trim>
        WHERE 1=1
        <trim prefix="" prefixOverrides="AND">
			<include refid="OperateLogModifyWhere" />
		</trim>
	</update>

    <!-- 操作日志 (单条查询) -->
    <resultMap id="OperateLogResult" type="OperateLog">
		<result column="operate_log_id" property="operateLogId"/>
		<result column="user_id" property="userId"/>
		<result column="user_account" property="userAccount"/>
		<result column="user_name" property="userName"/>
		<result column="operate_sql" property="operateSql"/>
		<result column="operate_type" property="operateType"/>
		<result column="operate_time" property="operateTime"/>
    </resultMap>
    <select id="getOperateLog" resultMap="OperateLogResult" parameterType="OperateLog" >
        SELECT
			a.operate_log_id,
			a.user_id,
			a.user_account,
			a.user_name,
			a.operate_sql,
			a.operate_type,
			a.operate_time
        FROM t_operate_log a
        WHERE 1=1
        <trim prefix="" prefixOverrides="AND">
            <include refid="OperateLogWhere" />
        </trim>
    </select>

    <!-- 操作日志 (列表查询) -->
    <resultMap id="OperateLogListResult" type="operateLog">
		<result column="operate_log_id" property="operateLogId"/>
		<result column="user_id" property="userId"/>
		<result column="user_account" property="userAccount"/>
		<result column="user_name" property="userName"/>
		<result column="operate_sql" property="operateSql"/>
		<result column="operate_type" property="operateType"/>
		<result column="operate_time" property="operateTime"/>
    </resultMap>
	<select id="getOperateLogList" resultMap="OperateLogListResult" parameterType="OperateLog" >
        SELECT
			a.operate_log_id,
			a.user_id,
			a.user_account,
			a.user_name,
			a.operate_sql,
			a.operate_type,
			a.operate_time
		FROM t_operate_log a
		WHERE 1=1
        <trim prefix="" prefixOverrides="AND">
            <include refid="OperateLogWhere" />
        </trim>
	</select>

    <!-- 操作日志 (分页查询) -->
    <resultMap id="OperateLogListPageResult" type="java.util.HashMap">
		<result column="operate_log_id" property="operateLogId"/>
		<result column="user_id" property="userId"/>
		<result column="user_account" property="userAccount"/>
		<result column="user_name" property="userName"/>
		<result column="operate_sql" property="operateSql"/>
		<result column="operate_type" property="operateType"/>
		<result column="operate_time" property="operateTime"/>
    </resultMap>
    <select id="getOperateLogListPage" resultMap="OperateLogListPageResult" parameterType="map" >
        SELECT
			a.operate_log_id,
			a.user_id,
			a.user_account,
			a.user_name,
			a.operate_sql,
			a.operate_type,
			a.operate_time
        FROM t_operate_log a
        WHERE 1=1
        <trim prefix="" prefixOverrides="AND">
            <include refid="OperateLogWhere" />
        </trim>
        <if test="pageSort != null">
            ORDER BY #{pageSort}
        </if>
        LIMIT #{beginRow},#{pageSize}
    </select>
    <select id="getOperateLogListPageCount" resultType="int" parameterType="map" >
        SELECT count(1)
        FROM t_operate_log a
        WHERE 1=1
        <trim prefix="" prefixOverrides="AND">
            <include refid="OperateLogWhere" />
        </trim>
    </select>

</mapper>