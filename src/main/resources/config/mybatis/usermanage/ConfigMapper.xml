<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.flysnow.usermanage.dao.ConfigDao">

	<sql id="ConfigWhere">
		<if test="configId != null">
            AND a.config_id=#{configId}
		</if>
		<if test="configCode != null">
            AND a.config_code=#{configCode}
		</if>
		<if test="configName != null">
            AND a.config_name=#{configName}
		</if>
		<if test="configValue != null">
            AND a.config_value=#{configValue}
		</if>
	</sql>
	
	<sql id="ConfigModifyWhere">
		<if test="where.configId != null">
			config_id=#{where.configId}
		</if>
		<if test="where.configCode != null">
			config_code=#{where.configCode}
		</if>
		<if test="where.configName != null">
			config_name=#{where.configName}
		</if>
		<if test="where.configValue != null">
			config_value=#{where.configValue}
		</if>
	</sql>
	
	<insert id="insertConfig" parameterType="Config">
		INSERT INTO t_config (
        <trim prefix="" suffixOverrides=",">
			<if test="configId != null">
				,config_id
			</if>
			<if test="configCode != null">
				,config_code
			</if>
			<if test="configName != null">
				,config_name
			</if>
			<if test="configValue != null">
				,config_value
			</if>
		</trim>
		) VALUES (
        <trim prefix="" suffixOverrides=",">
	       	<if test="configId != null">
				,#{configId}
			</if>
	       	<if test="configCode != null">
				,#{configCode}
			</if>
	       	<if test="configName != null">
				,#{configName}
			</if>
	       	<if test="configValue != null">
				,#{configValue}
			</if>
		</trim>
		)
	</insert>

    <delete id="deleteConfig" parameterType="Config">
        DELETE FROM t_config
        WHERE 1=1
        <trim prefix="" prefixOverrides="AND">
            <include refid="ConfigModifyWhere" />
        </trim>
    </delete>

    <update id="updateConfig" parameterType="Config">
		UPDATE t_config
        <trim prefix="SET" suffixOverrides=",">
			<if test="configId != null">
				,config_id=#{configId}
			</if>
			<if test="configCode != null">
				,config_code=#{configCode}
			</if>
			<if test="configName != null">
				,config_name=#{configName}
			</if>
			<if test="configValue != null">
				,config_value=#{configValue}
			</if>
		</trim>
        WHERE 1=1
        <trim prefix="" prefixOverrides="AND">
			<include refid="ConfigModifyWhere" />
		</trim>
	</update>

    <!-- 全局参数 (单条查询) -->
    <resultMap id="ConfigResult" type="Config">
		<result column="config_id" property="configId"/>
		<result column="config_code" property="configCode"/>
		<result column="config_name" property="configName"/>
		<result column="config_value" property="configValue"/>
    </resultMap>
    <select id="getConfig" resultMap="ConfigResult" parameterType="Config" >
        SELECT
			a.config_id,
			a.config_code,
			a.config_name,
			a.config_value
        FROM t_config a
        WHERE 1=1
        <trim prefix="" prefixOverrides="AND">
            <include refid="ConfigWhere" />
        </trim>
    </select>

    <!-- 全局参数 (列表查询) -->
    <resultMap id="ConfigListResult" type="config">
		<result column="config_id" property="configId"/>
		<result column="config_code" property="configCode"/>
		<result column="config_name" property="configName"/>
		<result column="config_value" property="configValue"/>
    </resultMap>
	<select id="getConfigList" resultMap="ConfigListResult" parameterType="Config" >
        SELECT
			a.config_id,
			a.config_code,
			a.config_name,
			a.config_value
		FROM t_config a
		WHERE 1=1
        <trim prefix="" prefixOverrides="AND">
            <include refid="ConfigWhere" />
        </trim>
	</select>

    <!-- 全局参数 (分页查询) -->
    <resultMap id="ConfigListPageResult" type="java.util.HashMap">
		<result column="config_id" property="configId"/>
		<result column="config_code" property="configCode"/>
		<result column="config_name" property="configName"/>
		<result column="config_value" property="configValue"/>
    </resultMap>
    <select id="getConfigListPage" resultMap="ConfigListPageResult" parameterType="map" >
        SELECT
			a.config_id,
			a.config_code,
			a.config_name,
			a.config_value
        FROM t_config a
        WHERE 1=1
        <trim prefix="" prefixOverrides="AND">
            <include refid="ConfigWhere" />
        </trim>
        <if test="pageSort != null">
            ORDER BY #{pageSort}
        </if>
        LIMIT #{beginRow},#{pageSize}
    </select>
    <select id="getConfigListPageCount" resultType="int" parameterType="map" >
        SELECT count(1)
        FROM t_config a
        WHERE 1=1
        <trim prefix="" prefixOverrides="AND">
            <include refid="ConfigWhere" />
        </trim>
    </select>

</mapper>